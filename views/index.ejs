<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Events Website</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const mobileMenuButton = document.querySelector(".mobile-menu-button");
            const mobileMenu = document.querySelector(".mobile-menu");
            
            mobileMenuButton.addEventListener("click", function () {
                mobileMenu.classList.toggle("hidden");
            });
        });
    </script>
</head>
<body class="bg-gray-100">
    <!-- Navbar -->
    <nav class="bg-white shadow-lg fixed w-full z-10">
        <div class="max-w-7xl mx-auto px-4">
            <div class="flex justify-between items-center h-16">
                <a href="#" class="text-2xl font-bold text-purple-600">EventHub</a>
                <div class="hidden md:flex space-x-8">
                    <a href="#" class="text-gray-700 hover:text-purple-600">Home</a>
                    <a href="#" class="text-gray-700 hover:text-purple-600">Events</a>
                    <a href="#" class="text-gray-700 hover:text-purple-600">About</a>
                    <a href="#" class="text-gray-700 hover:text-purple-600">Contact</a>
                </div>
                <button class="md:hidden mobile-menu-button p-2">
                    <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
                    </svg>
                </button>
            </div>
        </div>
        <div class="mobile-menu hidden md:hidden">
            <a href="#" class="block py-2 px-4 text-gray-700 hover:bg-purple-600 hover:text-white">Home</a>
            <a href="#" class="block py-2 px-4 text-gray-700 hover:bg-purple-600 hover:text-white">Events</a>
            <a href="#" class="block py-2 px-4 text-gray-700 hover:bg-purple-600 hover:text-white">About</a>
            <a href="#" class="block py-2 px-4 text-gray-700 hover:bg-purple-600 hover:text-white">Contact</a>
        </div>
    </nav>

    <!-- Hero Section -->
    <section class="pt-24 pb-12 md:pt-32 bg-purple-600 text-center text-white">
        <h1 class="text-4xl md:text-6xl font-bold">Discover Amazing Events</h1>
        <p class="text-xl text-purple-100 mb-8">Find and join the most exciting events in your area</p>
        <button class="bg-white text-purple-600 px-8 py-3 rounded-full font-semibold hover:bg-purple-100">
            Browse Events
        </button>
    </section>

    <!-- Featured Events -->
    <section class="py-12">
        <div class="max-w-7xl mx-auto px-4">
            <h2 class="text-3xl font-bold text-gray-800 mb-8">Featured Events</h2>
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
                <div class="bg-white rounded-lg shadow-md overflow-hidden">
                    <img src="/images/absa.jpeg" alt="Event 1" class="w-full h-48 object-cover">
                    <div class="p-6">
                        <h3 class="text-xl font-semibold">Music Festival 2025</h3>
                        <p class="text-gray-600">Join us for an unforgettable night of music and entertainment.</p>
                        <button class="bg-purple-600 text-white px-4 py-2 rounded hover:bg-purple-700">Book Now</button>
                    </div>
                </div>
                <div class="bg-white rounded-lg shadow-md overflow-hidden">
                    <img src="/images/google.jpeg" alt="Event 2" class="w-full h-48 object-cover">
                    <div class="p-6">
                        <h3 class="text-xl font-semibold">Tech Conference</h3>
                        <p class="text-gray-600">Explore the latest innovations in technology.</p>
                        <button class="bg-purple-600 text-white px-4 py-2 rounded hover:bg-purple-700">Book Now</button>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Footer -->
    <footer class="bg-gray-800 text-white py-12">
        <div class="max-w-7xl mx-auto px-4 grid grid-cols-1 md:grid-cols-3 gap-8">
            <div>
                <h3 class="text-xl font-semibold">EventHub</h3>
                <p class="text-gray-400">Your premier destination for events.</p>
            </div>
            <div>
                <h3 class="text-xl font-semibold">Quick Links</h3>
                <ul class="space-y-2">
                    <li><a href="#" class="text-gray-400 hover:text-white">About</a></li>
                    <li><a href="#" class="text-gray-400 hover:text-white">Contact</a></li>
                </ul>
            </div>
            <div>
                <h3 class="text-xl font-semibold">Follow Us</h3>
                <div class="flex space-x-4">
                    <a href="#" class="text-gray-400 hover:text-white">Facebook</a>
                    <a href="#" class="text-gray-400 hover:text-white">Twitter</a>
                </div>
            </div>
        </div>
    </footer>
</body>
</html>
